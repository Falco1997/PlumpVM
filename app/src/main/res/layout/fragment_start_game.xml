<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StartGameFragment">

    <TextView
        android:id="@+id/fragment_start_game_text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PlumpVM"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_start_game_button_start_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fragment_start_game_button_start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starta spel"
        app:layout_constraintBottom_toTopOf="@+id/fragment_start_game_spinner_number_of_players"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_start_game_text_view_name" />

    <TextView
        android:id="@+id/fragment_start_game_text_view_number_of_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Antal spelare"
        android:textSize="24dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_start_game_spinner_number_of_players"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Spinner
        android:id="@+id/fragment_start_game_spinner_number_of_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/numberOfPlayers"
        android:minWidth="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_start_game_spinner_number_of_rounds"
        app:layout_constraintTop_toBottomOf="@+id/fragment_start_game_button_start_game" />

    <TextView
        android:id="@+id/fragment_start_game_text_view_number_of_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Antal rundor"
        android:textSize="24dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_start_game_spinner_number_of_rounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Spinner
        android:id="@+id/fragment_start_game_spinner_number_of_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/numberOfRounds"
        android:minWidth="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_start_game_spinner_number_of_players" />

</androidx.constraintlayout.widget.ConstraintLayout>